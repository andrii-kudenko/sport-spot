    Description: View for Search method in the Controller which Search for available Event
-->
@model IEnumerable<SportSpot.Entities.Models.Event>

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header">
            <h2 class="mb-0">Search Events</h2>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <form asp-action="SearchEvents" method="get" id="searchForm">
                        <div class="form-group mb-3">
                            <label class="form-label">Location</label>
                            <input name="location" class="form-control" placeholder="Enter city or location" />
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label">Sport Type</label>
                            <select name="sportType" asp-items="Html.GetEnumSelectList<Sports>()" class="form-select">
                                <option value="">Select Sport</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Search Events
                        </button>
                    </form>
                </div>
            </div>

            <div id="searchResults">
                @if (Model != null && Model.Any())
                {
                    <partial name="_EventSearchResults" model="Model" />
                }
            </div>
        </div>
    </div>
</div>