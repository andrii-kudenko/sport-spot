@model SportSpot.Entities.Models.Event

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">@Model.Title</h2>
                <div>
                    @if (Model.CreatorId == (int)ViewBag.CurrentUserId)
                    {
                        <a asp-action="EditEvent" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <form asp-action="DeleteEvent" asp-route-id="@Model.Id" method="post" class="d-inline ">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this event?')">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <h4>Event Details</h4>
                    <dl class="row">
                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Date:</dt>
                        <dd class="col-sm-9">@Model.Date.ToString("f")</dd>

                        <dt class="col-sm-3">Location:</dt>
                        <dd class="col-sm-9">@Model.Location</dd>

                        <dt class="col-sm-3">Sport:</dt>
                        <dd class="col-sm-9">@Model.SportType</dd>

                        <dt class="col-sm-3">Required Players:</dt>
                        <dd class="col-sm-9">@Model.RequiredPlayers</dd>

                        <dt class="col-sm-3">Created By:</dt>
                        <dd class="col-sm-9">
                            <a asp-controller="User" asp-action="Profile" asp-route-id="@Model.CreatorId">
                                @(Model.Creator?.Name ?? "Unknown")
                            </a>
                        </dd>
                    </dl>
                </div>
                <div class="col-md-4">
                    <h4>Registered Players</h4>
                    @if (!Model.RegisteredPlayers?.Any() ?? true)
                    {
                        <p class="text-muted">No players registered yet.</p>
                    }
                    else
                    {
                        <div class="list-group">
                            @foreach (var player in Model.RegisteredPlayers)
                            {
                                <a href="@Url.Action("Profile", "User", new { id = player.Id })"
                                   class="list-group-item list-group-item-action">
                                    @player.Name
                                </a>
                            }
                        </div>
                    }
                    <form asp-action="JoinEvent" asp-route-eventId="@Model.Id" method="post" class="mt-3">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-person-plus"></i> Join Event
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
    @if (ViewBag.CreatorFriends != null)
    {
        <div class="user-list-container">
            <ul class="user-list">
                @foreach (var player in ViewBag.CreatorFriends)
                {
                    <li class="user-list-item">
                        <div class="user-info">
                            <h5 class="user-name">@player.Name</h5>
                            <p class="user-email">@player.Email</p>
                        </div>
                        <form asp-action="InviteUser" asp-route-eventId="@Model.Id" method="post" class="mt-3">
                            @Html.AntiForgeryToken()
                            <!-- Hidden input for Model.Id -->
                            <input type="hidden" name="eventId" value="@Model.Id" />

                            <!-- Hidden input for playerId -->
                            <input type="hidden" name="playerId" value="@player.Id" />

                            <button type="submit" class="invite-button">
                                Invite
                            </button>
                        </form>
                        
                    </li>
                }
            </ul>
        </div>

    }
    
</div>

