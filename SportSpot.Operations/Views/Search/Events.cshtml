@model SportSpot.Operations.Models.EventsSearchViewModel

@{
    ViewData["Title"] = "Search Events";
    Layout = "~/Views/Shared/_SearchingLayout.cshtml";
}

<h2>Search Events</h2>

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Filters Section -->
        <div class="col-md-5 col-lg-4">
            <div class="filters">
                <form>
                    <div class="mb-3">
                        <h6>Categories</h6>
                        <ul class="categories-list">
                                <a class="category-filter asp-controller="Search" asp-action="Events">
                            <li class="category-list-item @(string.IsNullOrEmpty(Model.SelectedCategory) ? "active-category" : "")">
                                    All Categories
                            </li>
                                </a>
                            @foreach (var category in Model.Categories)
                            {
                                    <a class="category-filter asp-controller="Search" asp-action="Events" asp-route-category="@category">
                                <li class="category-list-item @(category.ToString() == Model.SelectedCategory ? "active-category" : "")">
                                        @category
                                </li>
                                    </a>
                            }
                        </ul>
                    </div>
                    <div class="mb-3">
                        <label for="date">Date</label>
                        <input type="date" id="date" name="date" value="@Model.Date?.ToString("yyyy-MM-dd")" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="location">Location</label>
                        <input type="text" id="location" name="location" value="@Model.Location" class="form-control" placeholder="Enter location" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Apply Filters</button>
                </form>
            </div>

        </div>

        <!-- Results Section -->
        <div class="col-md-7 col-lg-8">
            <div class="row g-3">
                @if (Model.SearchResults.Any())
                {
                    @foreach (var item in Model.SearchResults)
                    {
                        <div class="col-md-5">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Title</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        <i class="bi bi-calendar"></i> @item.Date.ToString("MMM dd, yyyy HH:mm")
                                    </h6>
                                    <p class="card-text">@item.Description</p>
                                    <div class="mb-2">
                                        <span class="badge bg-primary">@item.SportType</span>
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-people"></i> @item.RequiredPlayers needed
                                        </span>
                                    </div>
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-geo-alt text-muted me-2"></i>
                                        <span>@item.Location</span>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <a asp-action="EventDetails" asp-controller="Event" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-info-circle"></i> View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-center">No results found for the selected category.</p>
                }
            </div>

        </div>
    </div>
</div>