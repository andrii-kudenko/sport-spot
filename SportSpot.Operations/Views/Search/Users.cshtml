@{
    ViewData["Title"] = "Search Events";
}

<h2>Search Players</h2>

<div class="container-fluid mt-4">
    <div class="container">
        <div class="search-bar">
            <div class="col-12 col-md-8 mx-auto">
                <div class="input-group input-group-lg">
                    <input type="text" id="searchInput" class="form-control" placeholder="Search for users..." aria-label="Search">
                </div>
            </div>
        </div>
        <div class="mt-4 player-results" id="resultsContainer" style="display: none;">
            <h2>Search Results</h2>
            <div id="results" class="row">
                <!-- Results will appear dynamically -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/searching.js"></script>
}