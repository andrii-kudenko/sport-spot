@model SportSpot.Entities.Models.User

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h2>@Model.Name's Profile</h2>
                <a asp-action="EditProfile" asp-route-id="@Model.Id" class="btn btn-primary">Edit Profile</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h4>Personal Information</h4>
                    <dl class="row">
                        <dt class="col-sm-4">Age:</dt>
                        <dd class="col-sm-8">@Model.Age</dd>

                        <dt class="col-sm-4">Height:</dt>
                        <dd class="col-sm-8">@Model.Height cm</dd>

                        <dt class="col-sm-4">Weight:</dt>
                        <dd class="col-sm-8">@Model.Weight kg</dd>

                        <dt class="col-sm-4">Preferred Sport:</dt>
                        <dd class="col-sm-8">@Model.Sports</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h4>Contact Information</h4>
                    <dl class="row">
                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Phone:</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>

                        <dt class="col-sm-4">Location:</dt>
                        <dd class="col-sm-8">@Model.City, @Model.Country</dd>

                        <dt class="col-sm-4">Address:</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4">Postal Code:</dt>
                        <dd class="col-sm-8">@Model.PostalCode</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>