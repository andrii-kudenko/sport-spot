@model SportSpot.Operations.Models.ProfileViewModel

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h2>@Model.ProfileUser.Name's Profile</h2>
                @if (Model.LoggedInUserId == Model.ProfileUser.Id)
                {
                    <a asp-action="EditProfile" asp-route-id="@Model.ProfileUser.Id" class="btn btn-primary">Edit Profile</a>
                }
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h4>Personal Information</h4>
                    <dl class="row">
                        <dt class="col-sm-4">Age:</dt>
                        <dd class="col-sm-8">@Model.ProfileUser.Age</dd>

                        <dt class="col-sm-4">Height:</dt>
                        <dd class="col-sm-8">@Model.ProfileUser.Height cm</dd>

                        <dt class="col-sm-4">Weight:</dt>
                        <dd class="col-sm-8">@Model.ProfileUser.Weight kg</dd>

                        <dt class="col-sm-4">Preferred Sport:</dt>
                        <dd class="col-sm-8">@Model.ProfileUser.Sports</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h4>Contact Information</h4>
                    <dl class="row">
                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.ProfileUser.Email</dd>

                        <dt class="col-sm-4">Phone:</dt>
                        <dd class="col-sm-8">@Model.ProfileUser.Phone</dd>

                        <dt class="col-sm-4">Location:</dt>
                        <dd class="col-sm-8">@Model.ProfileUser.City, @Model.ProfileUser.Country</dd>

                        <dt class="col-sm-4">Address:</dt>
                        <dd class="col-sm-8">@Model.ProfileUser.Address</dd>

                        <dt class="col-sm-4">Postal Code:</dt>
                        <dd class="col-sm-8">@Model.ProfileUser.PostalCode</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <div class="card mt-4">
        <div class="card-header">
            @if (Model.LoggedInUserId == Model.ProfileUser.Id)
            {
                <h3>Your Events</h3>
            }
            else
            {
                <h3>@Model.ProfileUser.Name</h3>
            }

        </div>
        <div class="card-body">
            <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Date</th>
                            <th>Sport</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Events.Any())
                        {
                            foreach (var eventItem in Model.Events)
                            {
                                <tr>
                                    <td>@eventItem.Title</td>
                                    <td>@eventItem.Date.ToString("yyyy-MM-dd")</td>
                                    <td>@eventItem.SportType</td>
                                    <td>
                                        @if (Model.LoggedInUserId == Model.ProfileUser.Id)
                                        {
                                            <a href="/Event/EditEvent/@eventItem.Id" class="btn btn-warning btn-sm">Edit</a>
                                        }
                                        else
                                        {
                                            <a href="/Event/EventDetails/@eventItem.Id" class="btn btn-primary btn-sm">View</a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">No events to display.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @if (Model.LoggedInUserId == Model.ProfileUser.Id)
    {
        <div class="d-flex mt-4">
            <div class="me-4">
                <a asp-action="Friends" class="btn btn-outline-primary">
                    Friends: @Model.FriendsCount
                </a>
            </div>
            <div>
                <a asp-action="FriendRequests" class="btn btn-outline-warning">
                    Requests: @Model.PendingRequestCount
                </a>
            </div>
        </div>
    }
    <div class="mt-4">
        @if (!Model.Friends.Any(f => f.Id == Model.ProfileUser.Id) &&
        !Model.FriendRequests.Any(fr => fr.Id == Model.ProfileUser.Id) &&
        Model.LoggedInUserId != Model.ProfileUser.Id)
        {
            <form asp-action="SendFriendRequest" method="post">
                <input type="hidden" name="targetUserId" value="@Model.ProfileUser.Id" />
                <button type="submit" class="btn btn-primary">Add Friend</button>
            </form>
        }
    </div>
    
</div>

